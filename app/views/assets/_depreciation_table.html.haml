= format_field("Purchase Date", format_as_date(@asset.purchase_date) )= format_field("Purchase Amount", format_as_currency(@asset.purchase_cost) )= format_field("In Service Date", format_as_date(@asset.in_service_date) )= format_field("Depreciation Start Date", format_as_date(@asset.depreciation_start_date) )= format_field("Salvage Value", format_as_currency(@asset.salvage_value) )= format_field("Replacement Value", format_as_currency(@asset.estimated_replacement_cost) )%fieldset  %legend.panel-legend Depreciation Table  %table.table.table-condensed.table-striped.table-hover.table-bordered    %thead      %tr        %th Fiscal Year        %th Book Value Start        %th Depreciated Expense        %th Book Value End        %th Accumulated Depreciation    %tbody      - @asset.get_depreciation_table.each do |row|        %tr          %td            = row[:year]          %td            = format_as_currency(row[:book_value_start])          %td            = format_as_currency(row[:depreciated_expense])          %td            = format_as_currency(row[:book_value_end])          %td            = format_as_currency(row[:accumulated_depreciation])