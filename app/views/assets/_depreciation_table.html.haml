.col-md-6  = format_field("Purchase Date", format_as_date(@asset.purchase_date) )  = format_field("Purchase Amount", format_as_currency(@asset.purchase_cost) )  = format_field("In Service Date", format_as_date(@asset.in_service_date) ).col-md-6  = format_field("Depreciation Start Date", format_as_date(@asset.depreciation_start_date) )  = format_field("Salvage Value", format_as_currency(@asset.salvage_value) )  = format_field("Replacement Value", format_as_currency(@asset.estimated_replacement_cost) ).col-md-12  %fieldset    %table.table.table-hover#asset_depreciation_table
      %thead        %tr          %th.left Date          %th.right Book Value Start          %th.right Depreciated Expense          %th.right Book Value End          %th.right Accumulated Depreciation      %tbody        - @asset.get_depreciation_table.each do |row|          %tr            %td.left              - if row[:timestep].to_s.include? "FY"                = row[:timestep]              - else                = format_as_date(row[:timestep])            %td.right              = format_as_currency(row[:book_value_start])            %td.right              = format_as_currency(row[:depreciated_expense])            %td.right              = format_as_currency(row[:book_value_end])            %td.right              = format_as_currency(row[:accumulated_depreciation])
  = render :partial => 'shared/datatable_javascript', :locals => {:id => 'asset_depreciation_table'}