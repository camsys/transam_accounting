= format_field("In Service Date", format_as_date(@asset.in_service_date) )= format_field("Depreciation Start Date", format_as_date(@asset.depreciation_start_date) )= format_field("Salvage Value", format_as_currency(@asset.salvage_value) )= format_field("Beginning YTD Depreciation", format_as_currency(@asset.beginning_ytd_depreciation) )= format_field("Beginning Accumulated Depreciation", format_as_currency(@asset.beginning_accumulated_depreciation) )= format_field("Current YTD Depreciation", format_as_currency(@asset.current_ytd_depreciation) )= format_field("Book Value or Current Accumulated Depreciation", format_as_currency(@asset.book_value) )= format_field("Date depreciated through", format_as_date(@asset.current_depreciation_date) )= format_field("Replacement Value", format_as_currency(@asset.estimated_replacement_cost) )%fieldset  %legend.panel-legend Depreciation Table  %table.table.table-condensed.table-striped.table-hover.table-bordered    %thead      %tr        %th Depreciation Date        %th Estimated Value        %th Depreciated Value    %tbody      - @asset.get_depreciation_table.each do |row|        %tr          %td            = format_as_date(row[:year])          %td            = format_as_currency(row[:estimated_value])          %td            = format_as_currency(row[:depreciated_value])