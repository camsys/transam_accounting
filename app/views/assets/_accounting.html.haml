%fieldset  %legend.panel-legend Purchase  = format_field("Purchase Date", format_as_date(@asset.purchase_date) )  = format_field("Purchase amount or Leased Amount (see FTA Ownership Type to see if leased)", format_as_currency(@asset.purchase_cost) )%fieldset  %legend.panel-legend Depreciation Summary  = format_field("In Service Date", format_as_date(@asset.in_service_date) )  = format_field("Depreciation Start Date", format_as_date(@asset.depreciation_start_date) )  = format_field("Salvage Value", format_as_currency(@asset.salvage_value) )  = format_field("Beginning YTD depreciation – the amount of depreciation for the previous accounting period.", "#" )  = format_field("Beginning Accumulated depreciation – the amount of accumulated depreciation for the previous accounting period.", "#" )  = format_field("Current YTD depreciation – the amount of depreciation for the current accounting period", "#" )  = format_field("Current Accumulated depreciation – the amount of accumulated depreciation for the current accounting period.", "#" )  = format_field("Date depreciated through", format_as_date(@asset.current_depreciated_date) )  = format_field("Book Value", format_as_currency(@asset.book_value) )  = format_field("Replacement Value", format_as_currency(@asset.estimated_replacement_cost) )%fieldset  %legend.panel-legend Depreciation Table  %table.table.table-condensed.table-striped.table-hover.table-bordered      %thead        %tr          %th Depreciation Date          %th Estimated Value          %th Depreciated Value      %tbody        - @asset.get_depreciable_table.each do |row|          %tr            %td              = format_as_date(row[:year])            %td              = row[:estimated_value]            %td              = row[:depreciated_value]