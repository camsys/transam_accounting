- acct_editable =  acct_editable.nil? ? true : acct_editable

.nested-fields
  .row
    .col-md-6
      = f.input :sourceable_id, :collection => GrantPurchase.sources({organization_id: @asset.organization_id, active: true}), :required => true, :label => GrantPurchase.label, :disabled => !acct_editable
    .col-md-5
      = f.input :pcnt_purchase_cost, :label => 'Pcnt', :wrapper => :vertical_append do
        = f.input_field :pcnt_purchase_cost, :class => 'form-control funding-pcnt', :max => 100, :step => 0.001, :disabled => !acct_editable
        %span.input-group-addon
          %i.fa.fa-percent

    - if acct_editable
      .col-md-1
      = link_to_remove_association f, :class => 'btn btn-xs btn-warning remove_grant_purchase', :style => 'margin-top: 27px;' do
          %i.fa.fa-trash-o



