.nested-fields
  .row
    .col-md-6
      = f.input :sourceable_id, :collection => GrantPurchase.sources, :label => 'Fund'
    .col-md-5
      = f.input :pcnt_purchase_cost, :label => 'Pcnt', :wrapper => :vertical_append do
        = f.input_field :pcnt_purchase_cost, :class => 'form-control', :max => 100, :step => 0.001
        %span.input-group-addon
          %i.fa.fa-percent

    .col-md-1
      = link_to_remove_association f, :class => 'btn btn-xs btn-warning', :style => 'margin-top: 27px;' do
        %i.fa.fa-trash-o



