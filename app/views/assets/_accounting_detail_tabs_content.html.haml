- if @asset.depreciable
  .tab-pane.fade#depreciation
    .tab-content
      = render 'depreciation_table'
.tab-pane.fade#expenditures
  .tab-content
    - if @asset.expenditures.empty?
      %p There are no CapEx associated with this asset.
    - else
      = render :partial => 'expenditures/index_table', :locals => {:expenditures => @asset.expenditures}

    - if can? :create, Expenditure
      .row{:style => 'margin-top:50px;'}
        .col-md-12
          %fieldset
            %legend Add CapEx
            - @expenditure = Expenditure.new
            = render :partial => 'expenditures/form'
