.btn-group.pull-right.panel-action
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    %i.fa.fa-cog
    = " Actions"
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    - if can? :update, @expenditure
      %li
        = link_to edit_expenditure_path(@expenditure) do
          %i.fa.fa-edit.fa-fw
          = " Update this CapEx"
    - if can? :destroy, @expenditure
      %li.divider
      %li
        = link_to expenditure_path(@expenditure), :method => :delete, :data => {:confirm => "Are you sure you want to remove this expenditure? The action can't be undone."} do
          %i.fa.fa-trash-o.fa-fw
          = " Remove this CapEx"
