.row
  .col-md-12
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-4
            %h3.panel-title
              %i.fa.fa-list
              Expenditures
          .col-md-8
            = render 'index_actions'
      .panel-body
        - if @expenditures.empty?
          %p No expenses found
        - else
          .col-md-12
            = render 'expenditures_table', :locals => {:expenditures => @expenditures}
