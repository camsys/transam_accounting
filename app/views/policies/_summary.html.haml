.col-sm-6
  = format_field("Policy Owner", @policy.organization.name )
  = format_field("Description", format_as_text(@policy.description) )
  = format_field("Parent Policy", link_to(@policy.parent.name, policy_path(@policy.parent)) ) unless @policy.parent.blank?
  = format_field("Active", format_as_boolean(@policy.active) )

.col-sm-6
  = format_field("Condition Threshold", format_as_decimal(@policy.condition_threshold))
  = format_field("Depreciation Calculation Type", @policy.depreciation_calculation_type.name, @policy.depreciation_calculation_type.description )
  = format_field("Depreciation Interval", @policy.depreciation_interval_type.name, @policy.depreciation_interval_type.description )
