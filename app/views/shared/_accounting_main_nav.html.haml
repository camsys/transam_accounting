%li{:class => get_nav_link_class(['accounting'])}
  = link_to "#", :class => "dropdown-toggle", :data => {"toggle" => "dropdown"}, :title => 'Accounting' do
    %i.fa.fa-usd.fa-2x
    %b.caret
  %ul.dropdown-menu.multi-level{:role => 'menu'}
    - if @organization_list.count == 1
      %li.text-left
        = link_to general_ledger_accounts_path do
          %i.fa.fa-book.fa-fw
          Chart of Accounts
    - else
      %li.text-left.dropdown-submenu
        = link_to '#' do
          %i.fa.fa-book.fa-fw
          Chart of Accounts

        %ul.dropdown-menu
          - Organization.where(id: @organization_list).each do |org|
            %li.text-left
              = link_to general_ledger_accounts_path(:organization_id => org.id) do
                %i.fa.fa-fw.fa-book
                = org.short_name

    %li.divider

    %li.text-left.dropdown-submenu
      = link_to grants_path do
        %i.fa.fa-fw.fa-legal
        = ' Grants'

      %ul.dropdown-menu
        - Grant.where(organization_id: @organization_list).each do |grant|
          %li.text-left
            = link_to grant_path(grant) do
              %i.fa.fa-fw.fa-legal
              = grant
        %li.divider
        %li
          = link_to new_grant_path do
            %i.fa.fa-plus.fa-fw
            = "Add Grant";

    %li.divider
    %li.text-left.dropdown-submenu
      = link_to expenditures_path do
        %i.fa.fa-fw.fa-usd
        = 'CapEx'

      %ul.dropdown-menu
        - @organization.expense_types.active.each do |type|
          %li.text-left
            = link_to expenditures_path(:type => type) do
              %i.fa.fa-fw.fa-usd
              = type
        %li.divider
        %li
          = link_to new_expenditure_path do
            %i.fa.fa-plus.fa-fw
            = "Add CapEx";

    %li.divider
    %li.text-left
      = link_to vendors_path do
        %i.fa.fa-fw.fa-tag
        = ' Vendors'
