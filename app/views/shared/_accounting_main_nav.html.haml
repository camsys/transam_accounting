%li.nav-item{:class => get_nav_link_class(['accounting'])}
  = link_to "#", :class => "dropdown-toggle", :data => {"toggle" => "dropdown"} do
    %i.fa.fa-usd.fa-2x
    %br
    Accounting
    %b.caret
  %ul.dropdown-menu.multi-level{:role => 'menu'}

    %li.text-left.dropdown-submenu
      = link_to general_ledger_accounts_path do
        %i.fa.fa-book.fa-fw
        Chart of Accounts

      %ul.dropdown-menu
        - GeneralLedgerAccountType.all.each do |account_type|
          %li.text-left
            = link_to general_ledger_accounts_path(:type => account_type) do
              %i.fa.fa-fw.fa-book
              = account_type

    %li.divider
    %li.text-left.dropdown-submenu
      = link_to grants_path do
        %i.fa.fa-fw.fa-legal
        = ' Grants'

      %ul.dropdown-menu
        - FundingSource.all.each do |funding_source|
          %li.text-left
            - if @organization.grants.where(:funding_source_id => funding_source.id).count > 0
              = link_to grants_path(:funding_source_id => funding_source.id) do
                %i.fa.fa-fw.fa-legal
                = funding_source

    %li.divider
    %li.text-left.dropdown-submenu
      = link_to expenditures_path do
        %i.fa.fa-fw.fa-usd
        = ' Expenditures'

      %ul.dropdown-menu
        - ExpenseType.all.each do |type|
          %li.text-left
            = link_to expenditures_path(:type => type) do
              %i.fa.fa-fw.fa-usd
              = type

    %li.divider
    %li.text-left
      = link_to vendors_path do
        %i.fa.fa-fw.fa-tag
        = ' Vendors'
