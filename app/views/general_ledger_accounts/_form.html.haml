= simple_form_for(@ledger_account,
  :html => {:class => 'form-vertical gla_form'},
  :wrapper => :vertical_form,
  :wrapper_mappings => {:check_boxes => :vertical_radio_and_checkboxes,
  :radio_buttons => :vertical_radio_and_checkboxes,
  :file => :vertical_file_input,
  :boolean => :vertical_boolean}) do |f|

  = f.association :general_ledger_account_type, :required => true, :collection => GeneralLedgerAccountType.active, :label => 'Account Type'
  = f.input :account_number, :required => true
  = f.input :name, :required => true

  = f.button :submit, :class => "btn btn-primary"

:javascript
  
  $('.gla_form').validate({
    submitHandler: function(form) {
      form.submit();
    }
  });
