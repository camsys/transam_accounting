        = render :partial => 'summary', :locals => {:ledger_account => @ledger_account}

  .col-md-9
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-12
            %h3.panel-title
              %i.fa.fa-folder-open
              Details

      .panel-body
        = render 'details'

= render 'scripts'
