- if gl_accounts.empty?
  %p There are no grants associated with this account.
-else
  %table.table.table-hover#gl_datatable
    %thead
      %tr
        %th.left Name
        %th.right Account Number
        %th.right Account Type

    %tbody
      - gl_accounts.each do |a|
        %tr.popup-details{:data => {:action_path => general_ledger_account_path(a)}}
          %td.left= a.name
          %td.right= a.account_number
          %td.right= a.general_ledger_account_type.name

  = render :partial => 'shared/datatable_javascript', :locals => {:id => 'gl_datatable'}
