- if can? :create, GeneralLedgerAccount
  = link_to new_general_ledger_account_path(chart_of_account_id: @chart_of_accounts.id), :class => 'btn btn-default' do
    %i.fa.fa-plus.fa-fw
    = " Add General Ledger Account";

= form_tag general_ledger_accounts_path, :id => 'filter_form', :method => "get", :class => 'navbar-form navbar-right panel-action', style: 'padding-top: 6px' do
  .form-group
    = hidden_field_tag :organization_id, params[:organization_id]
    = select_tag(:type, options_for_select(GeneralLedgerAccountType.active.collect{|a| [a.name, a.id]}, :selected => @account_type_id), :class => "form-control", :prompt => "Select GLA Type...")
    = select_tag(:subtype, options_for_select(GeneralLedgerAccountSubtype.active.collect{|a| [a.name, a.id]}, :selected => @account_subtype_id), :class => "form-control", :prompt => "Select GLA Subtype...")

    = button_tag :class => 'btn btn-default', :type => 'submit' do
      %i.fa.fa-filter
