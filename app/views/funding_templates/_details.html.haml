%ul.nav.nav-tabs
  %li
    %a{:href => "#desc", :data =>{:toggle => 'tab'}}
      = "Description"
  %li
    %a{:href => "#elgby", :data =>{:toggle => 'tab'}}
      = "Eligiblity"
  %li
    %a{:href => "#bckts", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= "TBD"
      = "Buckets"

.tab-content{:style => 'max-height:400px;overflow-y: auto;'}
  .tab-pane.fade#desc
    .tab-content
      - if @funding_template.description.present?
        = @funding_template.description
      - else
        There is no description associated with this template.

  .tab-pane.fade#elgby
    .tab-content
      - if @funding_template.all_organizations
        = format_field("Agencies", "All")
      - else
        = format_field("Agencies", format_as_list(@funding_template.organizations))

  .tab-pane.fade#bckts
    .tab-content
