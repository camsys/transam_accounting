%ul.nav.nav-tabs
  %li
    %a{:href => "#desc", :data =>{:toggle => 'tab'}}
      = "Description"
  %li
    %a{:href => "#elgby", :data =>{:toggle => 'tab'}}
      = "Eligiblity"
  %li
    %a{:href => "#bckts", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= "TBD"
      = "Buckets"

.tab-content{:style => 'max-height:400px;overflow-y: auto;'}
  .tab-pane.fade#desc
    .tab-content
      - if @funding_template.description.present?
        = format_as_text(@funding_template.description)
      - else
        There is no description associated with this template.

  .tab-pane.fade#elgby
    .tab-content
      - if @funding_template.query_string == 'id > 0'
        = format_field("Agencies", "All")
      - else
        = render :partial => 'organizations/index_table', :locals => {:organizations => @funding_template.organizations, :show_actions => 0}


  .tab-pane.fade#bckts
    .tab-content
