.panel-body
  = format_field("Name", vendor.name )
  = format_field("Address", format_as_address(vendor) ) if vendor.address1
  = format_field("Phone", format_as_phone_number(vendor.phone) )
  = format_field("Fax", format_as_phone_number(vendor.fax) )
  = format_field("Url", format_as_url(vendor.url) ) unless vendor.url.blank?

  %fieldset
    %legend.panel-legend Expenditures
    = format_field("Number of Expenditures YTD", format_as_integer(vendor.expenditures_ytd.count) )
    = format_field("Total Expenditures YTD", format_as_currency(vendor.expenditures_ytd.sum(:amount)) )
    = format_field("Number of Expenditures", format_as_integer(vendor.expenditures.count) )
    = format_field("Total Expenditures", format_as_currency(vendor.expenditures.sum(:amount)) )
