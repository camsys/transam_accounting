%ul.nav.nav-tabs
  %li
    %a{:href => "#assets", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @vendor.assets.count
      = "Assets"
  %li
    %a{:href => "#expenditures", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @vendor.expenditures.count
      = "Expenditures"

.tab-content
  .tab-pane.fade#assets
    .tab-content
      - if @vendor.assets.empty?
        %p There are no assets associated with this vendor.
      - else
        = render 'assets'

  .tab-pane.fade#expenditures
    .tab-content
      - if @vendor.expenditures.empty?
        %p There are no expenditures associated with this vendor.
      - else
        = render :partial => 'expenditures/expenditures_table', :locals => {:expenditures => @vendor.expenditures}
